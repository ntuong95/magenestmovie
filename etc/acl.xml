<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation=
        "urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource
                                    id="Magenest_Movie::config_movie"
                                    title="Magenest Movie" />
                        </resource>
                    </resource>
                </resource>

                <resource id="Magenest_Movie::home" title="Movie">
                    <resource id="Magenest_Movie::movie" title="Movies" sortOrder="10"/>
                    <resource id="Magenest_Movie::director" title="Directors" sortOrder="20"/>
                    <resource id="Magenest_Movie::acror" title="Actors" sortOrder="30"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>