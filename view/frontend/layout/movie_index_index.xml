<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Magenest Movie</title>
    </head>
    <body>
        <referenceBlock name="wishlist_sidebar" remove="true" />
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceContainer name="content">
            <block class="Magenest\Movie\Block\MovieList"
                   name="movielist" template="Magenest_Movie::movielist.phtml"/>
            <block class="Magenest\Movie\Block\ActorList"
                   name="actorlist" template="Magenest_Movie::actorlist.phtml"/>
        </referenceContainer>
    </body>
</page>